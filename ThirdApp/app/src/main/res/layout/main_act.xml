<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/body"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Text View 1"
        android:background="@color/brown"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:padding="20dp"
        />
    <TextView
        android:id="@+id/textView2"
        android:width="1dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="Text View 2"
        android:background="@color/brown"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:padding="20dp"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btn_blue_textView"
        android:text="Blue"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:backgroundTint="@color/blue"
        android:onClick="toBlueTextView"
        />
    <Button
        android:id="@+id/btn_white_textView"
        android:text="White"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:backgroundTint="@color/white"
        android:onClick="toWhiteTextView"
        />
    <Button
        android:id="@+id/btn_black_textView"
        android:text="Black"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:backgroundTint="@color/black"
        android:onClick="toBlackTextView"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_blue_body"
            android:text="Blue"
            android:backgroundTint="@color/blue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="toBlueBody"
            />
        <Button
            android:id="@+id/btn_white_body"
            android:text="White"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="toWhiteBody"
            />
        <Button
            android:id="@+id/btn_black_body"
            android:text="Black"
            android:backgroundTint="@color/black"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="toBlackBody"
            />
    </LinearLayout>
</LinearLayout>